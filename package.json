{
  "name": "modern-frontend-architecture",
  "version": "1.0.0",
  "description": "확장 가능하고 유지보수 가능한 현대적 프론트엔드 아키텍처 템플릿",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "lint:architecture": "eslint src --config .eslintrc.architecture.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "arch:check": "node scripts/check-dependencies.js",
    "arch:validate": "node scripts/validate-architecture.js",
    "arch:report": "node scripts/generate-architecture-report.js",
    "arch:fix": "node scripts/fix-architecture-violations.js",
    "domain:create": "./scripts/create-domain.sh",
    "domain:validate": "node scripts/validate-domains.js",
    "analyze:bundle": "npm run build && npx vite-bundle-analyzer dist",
    "analyze:deps": "npx madge --image deps.svg src/",
    "analyze:circular": "npx madge --circular src/",
    "analyze:complexity": "npx ts-complex --output json src/",
    "check:duplicates": "npx jscpd src/",
    "check:bundle-size": "bundlesize",
    "scan:dependencies": "npm audit && npx license-checker --summary",
    "generate:quality-report": "node scripts/quality-metrics-collector.js",
    "quality:gate": "node scripts/quality-gate.js",
    "prepare": "husky install",
    "pre-commit": "lint-staged && npm run arch:check && npm run type-check"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "axios": "^1.10.0",
    "zustand": "^5.0.6",
    "lucide-react": "^0.525.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-c8": "^0.33.0",
    "jsdom": "^26.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "bundlesize": "^0.18.2",
    "madge": "^8.0.0",
    "jscpd": "^4.0.5",
    "ts-complex": "^1.0.0",
    "license-checker": "^25.0.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/assets/index-*.js",
      "maxSize": "500 kB"
    },
    {
      "path": "./dist/assets/vendor-*.js",
      "maxSize": "200 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm run arch:validate && npm run test"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}