{
  "name": "modern-frontend-architecture",
  "version": "1.0.0",
  "description": "확장 가능하고 유지보수 가능한 현대적 프론트엔드 아키텍처 템플릿",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "lint:architecture": "eslint src --config .eslintrc.architecture.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "arch:check": "node scripts/check-dependencies.js",
    "arch:validate": "node scripts/validate-architecture.js",
    "arch:report": "node scripts/generate-architecture-report.js",
    "arch:fix": "node scripts/fix-architecture-violations.js",
    "domain:create": "./scripts/create-domain.sh",
    "domain:validate": "node scripts/validate-domains.js",
    "analyze:bundle": "npm run build && npx vite-bundle-analyzer dist",
    "analyze:deps": "npx madge --image deps.svg src/",
    "analyze:circular": "npx madge --circular src/",
    "analyze:complexity": "npx ts-complex --output json src/",
    "check:duplicates": "npx jscpd src/",
    "check:bundle-size": "bundlesize",
    "scan:dependencies": "npm audit && npx license-checker --summary",
    "generate:quality-report": "node scripts/quality-metrics-collector.js",
    "quality:gate": "node scripts/quality-gate.js",
    "prepare": "husky install",
    "pre-commit": "lint-staged && npm run arch:check && npm run type-check"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "@tanstack/react-query": "^4.28.0",
    "@tanstack/react-query-devtools": "^4.28.0",
    "axios": "^1.3.0",
    "zustand": "^4.3.0",
    "lucide-react": "^0.320.0",
    "clsx": "^1.2.1",
    "tailwind-merge": "^1.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-import": "^2.27.5",
    "typescript": "^5.0.2",
    "vite": "^4.2.0",
    "vitest": "^0.29.0",
    "@vitest/ui": "^0.29.0",
    "@vitest/coverage-c8": "^0.29.0",
    "jsdom": "^21.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "bundlesize": "^0.18.1",
    "madge": "^6.0.0",
    "jscpd": "^3.5.0",
    "ts-complex": "^1.0.0",
    "license-checker": "^25.0.1",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/assets/index-*.js",
      "maxSize": "500 kB"
    },
    {
      "path": "./dist/assets/vendor-*.js",
      "maxSize": "200 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm run arch:validate && npm run test"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}